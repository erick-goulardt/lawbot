<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="@drawable/backgroundpopup"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/closeButton"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="319dp"
        android:background="@drawable/baseline_close_24" />

    <TextView
        android:id="@+id/titulomodal"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="54dp"
        android:fontFamily="@font/paytone_one"
        android:text="Informação Processual"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="345dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="3dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/dataatualizacao"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="83dp"
        android:fontFamily="@font/paytone_one"
        android:text="Última Atualização"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/assunto"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="186dp"
        android:textAlignment="center"
        android:layout_marginEnd="5dp"
        android:text="Pensão"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/descricaoprocesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="223dp"
        android:fontFamily="@font/paytone_one"
        android:text="Descrição do Processo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/descricao"
        android:layout_width="286dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="32dp"
        android:text="Preciso que você venha ao meu escritório para que possamos conversar"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/data"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="5dp"
        android:text="20/10/2004"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/titulodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="157dp"
        android:fontFamily="@font/paytone_one"
        android:text="Assunto do Processo"
        android:textColor="@color/black"
        android:textSize="18sp" />
</RelativeLayout>